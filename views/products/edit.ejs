<%- include("../partials/header") %> <%- include("../partials/navbar") %>
<div class="container bg mt-3 mb-3 p-3">
  <%- include("../partials/flash") %>

  <form
    action="/products/<%=product._id%>"
    method="POST"
    enctype="multipart/form-data"
    class="needs-validation"
    novalidate
  >
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">ชื่อสินค้า</label>
      <input
        type="text"
        class="form-control"
        name="name"
        placeholder="ชื่อสินค้า"
        value="<%=product.name  %> "
        required
      />
    </div>
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">ลิงค์รูปสินค้า</label>
      <input
        type="text"
        class="form-control"
        name="imgtext"
        placeholder="ลิงค์รูปสินค้า"
        value="<%=product.img  %> "
        required
      />
    </div>
    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">ราคา</label>
      <input
        type="number"
        class="form-control"
        name="price"
        placeholder="ราคา"
        value="<%=product.price%>"
        required
      />
    </div>

    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">รายละเอียดสินค้า</label>
      <textarea
        class="form-control"
        rows="4"
        name="desc"
        placeholder="รายละเอียดสินค้า"
        required
      >
<%= product.desc %></textarea
      >
    </div>

    <button class="btn btn-primary" type="submit">บันทึก</button>
  </form>
</div>
<%- include("../partials/footer") %>
